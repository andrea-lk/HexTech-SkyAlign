from tkinter import *
WINDOW_WIDTH = 800
WINDOW_HEIGHT = 800

ENTRY_BOX_X = WINDOW_WIDTH * 0.25
ENTRY_BOX_Y = WINDOW_HEIGHT * 0.25

BOX_SEPARATION = 117
LABEL_SEP = 45
BUTTON_SEP_X = 80
BUTTON_SEP_Y = 170


def main():
    # create the window
    window = Tk()
    geometry = f"{WINDOW_WIDTH}x{WINDOW_HEIGHT}"
    window.geometry(geometry)
    window.title("Drone GPS Coordinates")

    # create the input boxes and buttons
    entry1, entry2 = create_input_boxes(window)
    make_buttons(window, entry1, entry2)

    window.mainloop()


def create_input_boxes(window):

    entry1 = Entry(window, font=("Comic Sans", 30))
    entry1.place(x=ENTRY_BOX_X, y=ENTRY_BOX_Y)

    entry2 = Entry(window, font=("Comic Sans", 30))
    entry2.place(x=ENTRY_BOX_X, y=ENTRY_BOX_Y + BOX_SEPARATION)

    label1 = Label(window, text="Enter Drone Latitude: ", font=("Comic Sans", 30))
    label1.place(x=ENTRY_BOX_X, y=ENTRY_BOX_Y - LABEL_SEP)

    label2 = Label(window, text="Enter Drone Longitude: ", font=("Comic Sans", 30))
    label2.place(x=ENTRY_BOX_X, y=ENTRY_BOX_Y + BOX_SEPARATION - LABEL_SEP)

    return entry1, entry2


def make_buttons(window, entry1, entry2):
    submit_button1 = Button(window, text="Submit", command=lambda:submit(entry1, entry2))
    submit_button1.place(x=ENTRY_BOX_X, y=ENTRY_BOX_Y + BUTTON_SEP_Y)

    clear_button1 = Button(window, text="Clear", command=lambda: clear(entry1, entry2))
    clear_button1.place(x=ENTRY_BOX_X + BUTTON_SEP_X, y=ENTRY_BOX_Y + BUTTON_SEP_Y)


def submit(entry1, entry2):
    lat_value = entry1.get()
    long_value = entry2.get()
    print(f"Drone GPS coordinates: Latitude = {lat_value}, Longitude = {long_value}")


def clear(entry1, entry2):
    entry1.delete(0, END)
    entry2.delete(0, END)



if __name__ == "__main__":
    main()

